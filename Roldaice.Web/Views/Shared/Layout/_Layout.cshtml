
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/Bundles/Mordernizr")
    @Styles.Render("~/Bundles/Dependency/Css")
    @MvcHelper.RenderStyleWithVersion("~/Bundles/Site/Css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @Html.Partial(MVC.Shared.Views.Layout.Partial._NavBar)
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial(MVC.Shared.Views.Layout.Partial._Url)
        @Html.Partial(MVC.Shared.Views.Layout.Partial._JavascriptConstants)
        @RenderBody()
    </div>

    @Scripts.Render("~/Bundles/Dependency")
    @MvcHelper.RenderScriptWithVersion("~/Bundles/Site")
    @RenderSection("scripts", required: false)
</body>
</html>
