@{
    Layout = MVC.Shared.Views.Layout._Layout;
    var guid = Guid.NewGuid().ToString();
    var divId = $"panel-collapse-{guid}";
}

@section styles{
    @RenderSection("styles", required: false)
}

@section scripts{
    @RenderSection("scripts", required: false)
}

<div class="row margin-top">
    <div class="panel panel-theme">
        <div class="panel-heading">
            @RenderSection("title", required: false)
            <span class="pull-right btn btn-menu btn-xs" data-toggle="collapse" data-target="#@divId">
                <span class="fa fa-angle-down"></span>
            </span>
        </div>
        <div id="@divId" class="panel-collapse collapse @RenderSection("defaultCollapse", required: false)">
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
    </div>
</div>