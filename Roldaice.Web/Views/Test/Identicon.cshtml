@model Roldaice.Web.Models.Test.IdenticonModel

@{
    ViewBag.Title = "Identicon";
    Layout = MVC.Shared.Views.Layout._PanelLayout;
}

@section title{
    <i class="@CssClass.FontAwesome.Configuration"></i> Identicon
}


@using (Html.BeginForm(MVC.Test.Identicon(), FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()

    <div class="form-group">
        <div class="col-xs-12">
            <div class="col-xs-12">
                @Html.LabelFor(m => m.Seed, new { @class = "control-label text-left" })
            </div>
            <div class="col-xs-12">
                @Html.TextBoxFor(m => m.Seed, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary"><i class="@CssClass.FontAwesome.Submit"></i> Générer</button>
        </div>
    </div>

    if (!String.IsNullOrEmpty(Model.Hash))
    {
        <div class="form-group">
            <div class="col-xs-12">
                <img class="@CssClass.Identicon" data-size="100" data-hash="@Model.Hash" />
            </div>
        </div>
    }
}