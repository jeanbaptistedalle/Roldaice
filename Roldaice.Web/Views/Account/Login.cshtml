@model Roldaice.Web.Models.Account.LoginModel
@{
    ViewBag.Title = "Authentification";
    Layout = MVC.Shared.Views.Layout._MiniPanelLayout;
}

@section title{
    <i class="@CssClass.FontAwesome.User"></i> Connexion
}

@section scripts{
    @MvcHelper.RenderScriptWithVersion("~/Bundles/Account/Login")
}

@using (Html.BeginForm(MVC.Account.Login(), FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()

    @Html.HiddenFor(m => m.ReturnUrl)

    <div class="form-group">
        <div class="col-xs-12">
            @Html.LabelFor(m => m.Login, new { @class = "control-label" })
        </div>
        <div class="col-xs-12">
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        </div>
        <div class="col-xs-12">
            <div class="input-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <a href="#" id="show-password-btn" class="input-group-addon" data-target="#@Html.IdFor(m=>m.Password)" data-toggle="tooltip" title="Voir le mot de passe">
                    <i class="@CssClass.FontAwesome.SeePassword"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12">
            @Html.LabelFor(m => m.IsPersistent, new { @class = "control-label" })
        </div>
        <div class="col-xs-12">
            @Html.EditorFor(m => m.IsPersistent)
        </div>
    </div>


    <div class="form-group">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-theme"><i class="@CssClass.FontAwesome.User"></i> Connection</button>
        </div>
    </div>
}
